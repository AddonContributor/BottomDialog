<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomDialogStyle">@style/BottomSheet.StyleDialog</item>
    </style>

    <style name="StyleTheme" parent="@style/AppTheme">
        <item name="bottomDialogStyle">@style/BottomSheet.StyleDialog</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bd_Background">@color/abc_search_url_text_normal</item>
        <item name="bd_DividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bd_NumColumns">4</item>
        <item name="bd_ListStyle">@style/BottomSheet.StyleList</item>
    </style>

    <style name="BottomSheet.StyleList" parent="BottomSheet.List.Dark" >
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:background">@color/bs_dark_divider_color</item>
        <item name="android:layoutAnimation">@anim/bs_list_layout_fade_in</item>
    </style>

    <style name="BottomSheet.CustomDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bd_DividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bd_NumColumns">4</item>
        <item name="bd_ListStyle">@style/BottomSheet.StyleList</item>
        <item name="bd_ListItemLayout">@layout/bs_list_entry</item>
        <item name="bd_GridItemLayout">@layout/bs_grid_entry</item>
        <item name="bd_HeaderLayout">@layout/bs_header</item>
    </style>

    <style name="BottomSheet.CustomizedDialog" parent="BottomSheet.StyleDialog">
        <item name="bd_GridItemLayout">@layout/new_grid_entry</item>
        <item name="bd_HeaderLayout">@layout/new_header</item>
    </style>

</resources>