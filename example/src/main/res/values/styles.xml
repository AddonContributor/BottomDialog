<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:listViewStyle">@style/DialogListViewStyle</item>-->
    </style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
        <!--<item name="android:listViewStyle">@style/DialogListViewStyle</item>-->
    </style>


    <!-- Base Theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Attributes for all APIs -->
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
           <!--parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!-- Customize your theme here. -->
        <item name="bottomDialogStyle">@style/BottomDialog.StyleDialog</item>
    </style>

    <!--<style name="StyleTheme" parent="@style/AppTheme">-->
        <!--<item name="bottomDialogStyle">@style/BottomDialog.StyleDialog</item>-->
    <!--</style>-->

    <style name="BottomDialog.StyleDialog" parent="BottomDialog.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bd_Background">#ffcc0000</item>
        <item name="bd_DividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bd_NumColumns">4</item>
        <item name="bd_ListStyle">@style/BottomDialog.StyleList</item>
    </style>

    <style name="BottomDialog.StyleList" parent="BottomDialog.List.Dark" >
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:background">@color/bs_dark_divider_color</item>
        <item name="android:layoutAnimation">@anim/bs_list_layout_fade_in</item>
    </style>

    <style name="BottomDialog.CustomDialog" parent="BottomDialog.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomDialog.Animation</item>
        <item name="android:textColorPrimary">#DDffffff</item>
        <item name="android:textColorSecondary">#8Affffff</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="bd_DividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bd_NumColumns">4</item>
        <item name="bd_ListStyle">@style/BottomDialog.StyleList</item>
        <item name="bd_ListItemLayout">@layout/list_entry</item>
        <item name="bd_GridItemLayout">@layout/grid_entry</item>
        <item name="bd_HeaderLayout">@layout/dialog_header</item>
    </style>

    <style name="BottomDialog.CustomizedDialog" parent="BottomDialog.StyleDialog">
        <item name="bd_GridItemLayout">@layout/new_grid_entry</item>
        <item name="bd_HeaderLayout">@layout/new_header</item>
        <item name="bd_Background">@color/abc_search_url_text_normal</item>
    </style>

</resources>
