<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bs_main"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:background="?attr/bd_Background"
              android:orientation="vertical"
              tools:ignore="Overdraw">

    <com.brmnt.bottomdialog.PinnedSectionGridView
            android:id="@+id/bottom_sheet_gridview"
            style="?attr/bd_ListStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:numColumns="?attr/bd_NumColumns"
            tools:listitem="@layout/grid_entry" />

</LinearLayout>
